<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー編集</h2>

        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

          <div class="field">
        <%= f.label :current_password, "現在のパスワード" %> <i></i><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
       </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :name, "ユーザー名" %><br />
          <%= f.text_field :name, id:"user_name" %>
        </div>

        <div class="field">
          <%= f.label :favorite, "好きな画家" %><br />
          <%= f.text_area :favorite, class: :form__text, id:"user_profile" %>
        </div>

        <div class="field">
          <%= f.label :museum, "お気に入りの美術館" %><br />
          <%= f.text_area :museum, class: :form__text, id:"user_occupation" %>
        </div>

        <div class="actions">
          <%= f.submit "更新する", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>