<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.name}さん"%>
      </h2>
      <% if user_signed_in? && @user == current_user %>
        <div class="edit__manage">
          <%= link_to "編集する", edit_user_path(@user), class: :edit__btn %>
          </div>
        <% end %>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">好きな画家</th>
            <td class="table__col2"><%= @user.favorite %></td>
          </tr>
          <tr>
            <th class="table__col1">お気に入りの美術館</th>
            <td class="table__col2"><%= @user.museum %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@user.name}さんの投稿"%>
      </h2>
      <div class="user__card">
        <%= render partial: 'pictures/picture', collection: @user.pictures %>
      </div>
    </div>
  </div>
</div>