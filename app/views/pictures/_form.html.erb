<%= form_with model: @picture, local: true do |f|%>

<%= render 'pictures/error_messages', model: f.object %>

  <div class="field">
    <%= f.label :title, "作品名" %><br />
    <%= f.text_field :title, id:"picture_title" %>
  </div>

  <div class="field">
    <%= f.label :explanation, "作品の説明" %><br />
    <%= f.text_area :explanation, class: :form__text, id:"picture_explanation" %>
  </div>

  <div class="field">
    <%= f.label :impression, "感想" %><br />
    <%= f.text_area :impression, class: :form__text, id:"picture_impression" %>
  </div>

  <div class="field">
    <%= f.label :image, "写真を選択" %><br />
    <%= f.file_field :image, id:"picture_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>