<div class="card">
  <%= link_to image_tag( picture.image, class: :card__img ), picture_path(picture.id) %>
  <div class="card__body">
    <%= link_to picture.title, picture_path(picture.id), class: :card__title%>
    <p class="card__summary">
      <%= picture.explanation %>
    </p>
    <%= link_to "by #{picture.user.name}", user_path(picture.user), class: :card__user %>
  </div>
</div>