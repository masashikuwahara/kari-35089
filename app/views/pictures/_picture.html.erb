<div class="card">
  <%= link_to image_tag(picture.image, class: :card__img ), picture_path(picture) %>
  <div class="card__body">
    <%= link_to picture.title, picture_path(picture), class: :card__title%>
    <p class="card__summary">
      <%= prototype.catch_copy %>
    </p>
    <%= link_to "by #{picture.user.name}", user_path(picture.user), class: :card__user %>
  </div>
</div>