<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @picture.title %>
      </p>
      <%= link_to "by #{@picture.user.name}", user_path(@picture.user), class: :prototype__user %>
      <% if user_signed_in? && current_user.id == @picture.user_id %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_picture_path(@picture), class: :prototype__btn %>
          <%= link_to "削除する", picture_path(@picture), method: :delete, class: :prototype__btn %>
        </div>
        <% end %>
      <div class="prototype__image">
        <%= image_tag @picture.image %>
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">説明</p>
          <p class="detail__message">
            <%= @picture.explanation %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">感想</p>
          <p class="detail__message">
            <%= @picture.impression %>
          </p>
        </div>
      </div>
      <div class="prototype__comments">
        <% if user_signed_in? %>
          <%= form_with model: [@picture, @comment],local: true do |f|%>
            <div class="field">
              <%= f.label :text, "コメント" %><br />
              <%= f.text_field :text, id:"comment_text" %>
            </div>
            <div class="actions">
              <%= f.submit "送信する", class: :form__btn  %>
            </div>
          <% end %> 
          <%end%>
        <ul class="comments_lists">
          <% if @comments %>
           <% @comments.each do |comment| %>
            <li class="comments_list">
              <%= comment.text %>
              <%= link_to comment.user.name, user_path(comment.user.id), class: :comment_user %>
            </li>
            <% end %>
            <% end %>
        </ul>
      </div>
    </div>
  </div>
</main>
