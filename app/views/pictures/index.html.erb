<main class="main">
  <div class="inner">
    <%if user_signed_in? %>
       <div class="greeting"> 
         こんにちは、
        <%= link_to "#{current_user.name}さん", user_path(current_user.id), class: :greeting__link%>
        あなたの好きな絵を投稿してください
      </div>
      <% end %>
    <div class="card__wrapper">
       <%= render partial: "picture", collection: @pictures %>
    </div>
  </div>
</main>
